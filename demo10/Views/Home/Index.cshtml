@model demo10.Models.Price;
@{
    ViewData["Title"] = "Home Page";
}



<div class="w-lg-50" id="price">
    <!--begin::Label-->
    <label class="fs-6 fw-semibold mb-2">
        Daily Budget

        <span class="m2-1" data-bs-toggle="tooltip" title="Choose the budget allocated for each day. Higher budget will generate better results">
            <i class="ki-duotone ki-information fs-7"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
        </span>
    </label>
    <!--end::Label-->
    

    <!--begin::Slider-->
    <form method="post" asp-controller="Home" asp-action="Index">
      <div class="d-flex flex-column text-center">
          <div class="d-flex align-items-start justify-content-center mb-3">
              <span class="fw-bold fs-1 me-1">$</span>
              <div class="fw-bold fs-1" id="sliderLabel">
                  <label asp-for="PriceAmount"></label>
                  <input type="number" asp-for="PriceAmount">
              </div>
              <span class="fw-bold fs-1">.00</span>
          </div>
          <div id="slider" class="noUi-sm"></div>
      </div>
      <button class="button-6 mt-4" role="button" type="submit">submit</button>

  </form>
    <!--end::Slider-->
    
</div>